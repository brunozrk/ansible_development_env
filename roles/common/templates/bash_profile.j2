source ~/.profile

function parse_git_branch () {
  git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}

RED="\[\033[0;31m\]"
YELLOW="\[\033[0;33m\]"
GREEN="\[\033[0;32m\]"
NO_COLOR="\[\033[0m\]"

PS1="$GREEN\u@\h$NO_COLOR:\w$YELLOW\$(parse_git_branch)$NO_COLOR\n$ "

# Git shortcuts
alias ga='git add '
alias gb='git branch '
alias gc='git commit'
alias gd='git diff'
alias go='git checkout '
alias gl='git log'
alias gm='git merge '
alias glt='git log --graph --decorate --pretty=oneline --abbrev-commit'

# Projects dir
alias cdp='cd ~/Projects/'

# Gemfile
alias bi='bundle install'
